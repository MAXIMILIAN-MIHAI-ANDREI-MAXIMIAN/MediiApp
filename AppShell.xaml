<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MediiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MediiApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
Title="Welcome"
ContentTemplate="{DataTemplate local:MainPage}"
/>
        <ShellContent
Title="Lista cu Destinatii"
ContentTemplate="{DataTemplate local:ListEntryPage}"
/>
        <ShellContent
Title="Destinatiile Mele"
ContentTemplate="{DataTemplate local:ShopEntryPage}"
/>
        <ShellContent
Title="About"
ContentTemplate="{DataTemplate local:AboutPage}"
/>
        <ShellContent Title="Logout" Route="logout" ContentTemplate="{DataTemplate local:LogoutPage}" />
    </TabBar>

</Shell>
